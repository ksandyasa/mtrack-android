<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow Darker Line -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Main Color -->
    <item android:bottom="0.5dp">
        <shape android:shape="rectangle" android:dither="true" >
            <gradient android:startColor="@color/colorPrimaryOpacity30"
                android:centerColor="@color/colorPrimaryOpacity50"
                android:endColor="@color/colorWhite"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>