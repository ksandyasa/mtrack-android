<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow Darker Line -->
    <item>
        <shape android:shape="oval" >
            <gradient android:startColor="#50000000"
                android:centerColor="#25000000"
                android:endColor="#0F000000"
                />
        </shape>
    </item>

    <!-- Main Color -->
    <item android:bottom="2.5dip" android:right="2.5dp" android:top="2.5dp" android:left="2.5dp">
        <shape android:shape="oval" android:dither="true" >
            <solid android:color="@color/colorCustomGrey50Opacity"/>
        </shape>
    </item>

</layer-list>