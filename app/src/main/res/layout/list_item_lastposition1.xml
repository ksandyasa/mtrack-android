<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal" android:gravity="center"
    android:id="@+id/ll_container_item_lastposition1" android:padding="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/tv_indeks_item_lastposition1" android:layout_width="25dp"
        android:layout_height="wrap_content" android:textSize="@dimen/list_item_last_position1_text_size"
        android:textColor="@color/colorBlack"
        android:text="No." android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_assetcode_item_lastposition1" android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="Asset Code" android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_address_item_lastposition1" android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="Address vehicle" android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_timestamp_item_lastposition1" android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="Vch. Status" android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_status_item_lastposition1" android:layout_width="80dp"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="Vch. Status" android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_engine_item_lastposition1" android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="Eng. Status" android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_phone_item_lastposition1" android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="GSM" android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_distance_item_lastposition1" android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="Distance" android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_speed_item_lastposition1" android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="Speed" android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_duration_item_lastposition1" android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_last_position1_text_size" android:textColor="@color/colorBlack"
        android:text="Duration" android:gravity="left"
        />

</LinearLayout>