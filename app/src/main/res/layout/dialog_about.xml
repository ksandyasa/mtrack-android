<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:padding="@dimen/activity_vertical_margin" android:background="@drawable/dialog_about_bg">

    <TextView
        android:id="@+id/tv_title_dialog_about"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="24sp" android:textColor="@color/colorBlack"
        android:text="MOBILE M-Track" />

    <ImageView
        android:layout_width="152dp" android:layout_height="76dp"
        android:scaleType="fitCenter" android:src="@drawable/logo_mtrack"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="15sp" android:textColor="@color/colorBlack"
        android:text="Version 1.0.5" android:layout_marginTop="20dp"
        android:id="@+id/tv_version_dialog_about"/>

</LinearLayout>